

//--------------------------------------------------------------------------------------
// Globals
//--------------------------------------------------------------------------------------
//--------------------------------------------------------------------------------------
// Textures and Samplers
//--------------------------------------------------------------------------------------

sampler2D g_samLinear : register(s0);

//--------------------------------------------------------------------------------------
// Input / Output structures
//--------------------------------------------------------------------------------------
struct PS_INPUT
{
	float2 vTexcoord	: TEXCOORD0;
};

//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------
float4 main(PS_INPUT Input) : SV_TARGET
{
	float4 out_Color = tex2D(g_samLinear, Input.vTexcoord);

	float buf = out_Color.x + out_Color.y + out_Color.z;

	out_Color.x = buf / 3;
	out_Color.y = buf / 3;
	out_Color.z = buf / 3;

	return out_Color;
}

